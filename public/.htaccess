<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Permitir acceso directo a archivos existentes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirigir todo lo dem√°s a index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule> 