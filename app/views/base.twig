    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    function changeLanguage(lang) {
        // Establecer la cookie con una fecha de expiraciÃ³n de 1 aÃ±o
        let date = new Date();
        date.setTime(date.getTime() + (365 * 24 * 60 * 60 * 1000));
        document.cookie = `lang=${lang};path=/;expires=${date.toUTCString()}`;
        
        // Actualizar el selector antes de recargar
        const select = document.querySelector('select');
        if (select) {
            select.value = lang;
        }
        
        // Recargar la pÃ¡gina
        window.location.reload();
    }

    // Al cargar la pÃ¡gina, asegurarse de que el selector refleje el idioma actual
    document.addEventListener('DOMContentLoaded', function() {
        const currentLang = document.cookie.split('; ').find(row => row.startsWith('lang='));
        if (currentLang) {
            const lang = currentLang.split('=')[1];
            const select = document.querySelector('select');
            if (select) {
                select.value = lang;
            }
        }
    });
    </script>
</body>
