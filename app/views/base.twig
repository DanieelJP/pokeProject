{# Plantilla base que define la estructura com칰n para todas las p치ginas del sitio #}
<!DOCTYPE html>
<html lang="{{ locale|default('es') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {# T칤tulo din치mico que puede ser sobrescrito por las plantillas hijas #}
    <title>{% block title %}{{ 'Pok칠dex'|trans }}{% endblock %}</title>
    {# Carga de hojas de estilo: Bootstrap, Font Awesome y estilos personalizados #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        {# Barra de navegaci칩n principal #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">{{ 'Pok칠dex'|trans }}</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/"><i class="fas fa-home"></i> {{ 'Inicio'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin"><i class="fas fa-cog"></i> {{ 'Panel Admin'|trans }}</a>
                        </li>
                    </ul>
                    {# Selector de idioma con banderas #}
                    <div class="navbar-nav">
                        <select class="form-select form-select-sm bg-dark text-light border-secondary" style="width: auto;" onchange="changeLanguage(this.value)">
                            <option value="es" {% if locale == 'es' %}selected{% endif %}>游쀯릖 ES</option>
                            <option value="en" {% if locale == 'en' %}selected{% endif %}>游섫릖 EN</option>
                        </select>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    {# Contenedor principal para el contenido espec칤fico de cada p치gina #}
    <main class="py-4">
        {% block content %}{% endblock %}
    </main>

    {# Pie de p치gina com칰n para todas las p치ginas #}
    <footer class="bg-dark text-light py-3 mt-5">
        <div class="container text-center">
            <p>&copy; 2024 {{ 'Pok칠dex'|trans }}</p>
        </div>
    </footer>

    {# Carga de scripts: Bootstrap y funcionalidad de cambio de idioma #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Funci칩n para cambiar el idioma y guardar la preferencia en una cookie
    function changeLanguage(lang) {
        // Establecer la cookie con una fecha de expiraci칩n de 1 a침o
        let date = new Date();
        date.setTime(date.getTime() + (365 * 24 * 60 * 60 * 1000));
        document.cookie = `lang=${lang};path=/;expires=${date.toUTCString()}`;
        
        // Actualizar el selector antes de recargar
        const select = document.querySelector('select');
        if (select) {
            select.value = lang;
        }
        
        // Recargar la p치gina para aplicar el nuevo idioma
        window.location.reload();
    }

    // Al cargar la p치gina, asegurarse de que el selector refleje el idioma actual
    document.addEventListener('DOMContentLoaded', function() {
        const currentLang = document.cookie.split('; ').find(row => row.startsWith('lang='));
        if (currentLang) {
            const lang = currentLang.split('=')[1];
            const select = document.querySelector('select');
            if (select) {
                select.value = lang;
            }
        }
    });
    </script>
    {# Bloque para scripts adicionales que pueden ser a침adidos por las plantillas hijas #}
    {% block scripts %}{% endblock %}
</body>
</html>
