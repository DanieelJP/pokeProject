{% extends 'base.twig' %}

{% block title %}404 - Página no encontrada{% endblock %}

{% block content %}
<div class="container text-center mt-5">
    <h1>Error 404</h1>
    <h2>Página no encontrada</h2>
    {% if error %}
        <p class="text-danger">{{ error }}</p>
    {% endif %}
    <a href="/" class="btn btn-primary mt-3">Volver al inicio</a>
</div>
{% endblock %}