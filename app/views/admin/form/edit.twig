{% extends 'layout.twig' %}

{% block title %}{{ action == 'edit' ? 'Editar' : 'Nueva' }} Forma - Panel de Administración{% endblock %}

{% block content %}
<div class="container mt-4">
    {% if error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ error }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">{{ action == 'edit' ? 'Editar' : 'Nueva' }} Forma</h2>
                    <a href="/admin" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/form/save" id="formForm">
                        {% if action == 'edit' and form %}
                            <input type="hidden" name="id" value="{{ form.id }}">
                        {% endif %}

                        <div class="mb-3">
                            <label for="pokemon_id" class="form-label">Pokémon Base</label>
                            <select class="form-select" id="pokemon_id" name="pokemon_id" required>
                                <option value="">Selecciona un Pokémon</option>
                                {% for pokemon in pokemons %}
                                    <option value="{{ pokemon.pokemon_id }}" 
                                            {{ form and form.pokemon_id == pokemon.pokemon_id ? 'selected' : '' }}>
                                        {{ pokemon.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="form_name" class="form-label">Nombre de la Forma</label>
                            <input type="text" class="form-control" id="form_name" name="form_name" 
                                   value="{{ form.form_name }}" required>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> 
                                {{ action == 'edit' ? 'Actualizar' : 'Crear' }} Forma
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.getElementById('formForm').addEventListener('submit', function(e) {
    if (!confirm('¿Estás seguro de que quieres {{ action == "edit" ? "actualizar" : "crear" }} esta forma?')) {
        e.preventDefault();
    }
});
</script>
{% endblock %} 